<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <context id="PostgresTables" targetRuntime="MyBatis3">

    <!-- スキーマ情報を取得する DB への接続設定 -->
    <jdbcConnection driverClass="org.postgresql.Driver"
        connectionURL="jdbc:postgresql://localhost:5432/tck"
        userId="tck"
        password="tck">
    </jdbcConnection>

    <!-- SELECT 結果等を格納するドメインモデルを生成する設定 -->
    <javaModelGenerator targetPackage="com.kamanon.domain.model.mybatis.entity" targetProject="TwitterCloneByKamanon/src/main/java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <!-- SQL 設定が記述された XML を生成する設定 -->
    <sqlMapGenerator targetPackage="com.kamanon.domain.model.mybatis.mapper" targetProject="TwitterCloneByKamanon/src/main/resources">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>
    <!-- マッパークラスを生成する設定 -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.kamanon.domain.model.mybatis.mapper" targetProject="TwitterCloneByKamanon/src/main/java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

    <!-- コードを生成するテーブルを指定 -->
    <!-- schemaではなくcatalogにすることで生成成功した？ -->
    <table catalog="tck" tableName="usr" />
    <table catalog="tck" tableName="tweet" />
    <table catalog="tck" tableName="follow" />

  </context>
</generatorConfiguration>